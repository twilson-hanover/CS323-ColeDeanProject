<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q1Activity">

    <TextView
        android:id="@+id/q1_question"
        android:layout_width="336dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:text="@string/q1" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q1_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-219dp"
        android:text="@string/q1a1" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:text="@string/q1a2" />

    <ImageView
        android:id="@+id/q1_image"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="@android:dimen/thumbnail_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/bhutan_img"
        android:src="@drawable/bhutan_project_photo" />

    <Button
        android:id="@+id/q1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:onClick="toQ2Activity"
        android:text="Question 2" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:text="@string/q1a3" />

</RelativeLayout>